<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:dynamicControls1="clr-namespace:Client.Desktop.Models.TimeTracking.DynamicControls"
             x:DataType="dynamicControls1:NoteViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Client.Desktop.Views.Tracking.DynamicControl.NoteControl">

    <Border Margin="{StaticResource GeneralControlMargin}"
            Padding="{StaticResource GeneralControlMargin}"
            CornerRadius="{StaticResource ControlCornerRadius}">
        <Grid RowDefinitions="Auto, *">
            <Grid.KeyBindings>
                <KeyBinding Gesture="Alt + Enter" Command="{Binding UpdateNoteCommand}" />
                <KeyBinding Gesture="Alt + Left" Command="{Binding SetPreviousTypeCommand}" />
                <KeyBinding Gesture="Alt + Right" Command="{Binding SetNextTypeCommand}" />
            </Grid.KeyBindings>

            <Grid Grid.Row="0" RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*, Auto, *">
                <Rectangle Grid.Column="0" Grid.Row="1" Height="5"
                           Margin="10,0,10,0"
                           HorizontalAlignment="Stretch"
                           Fill="{Binding Note.NoteType.Color, Converter={StaticResource HexColorToAvaloniaColorConverter}}" />
                <TextBlock Grid.Column="1" Grid.Row="1"
                           Text="{Binding Note.NoteType.Name, Mode = TwoWay}" />
                <Rectangle Grid.Column="2" Grid.Row="1" Height="5"
                           Margin="10,0,10,0"
                           HorizontalAlignment="Stretch"
                           Fill="{Binding Note.NoteType.Color, Converter={StaticResource HexColorToAvaloniaColorConverter}}" />
            </Grid>
            <TextBox Grid.Row="1" AcceptsReturn="True"
                     TextWrapping="Wrap"
                     Text="{Binding Note.Text, Mode = TwoWay}" />
        </Grid>
    </Border>
</UserControl>