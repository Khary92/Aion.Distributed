<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:Client.Desktop.Models.Analysis"
             xmlns:analysis="clr-namespace:Client.Desktop.Views.Analysis"
             x:Class="Client.Desktop.Views.Analysis.AnalysisControlWrapper"
             x:DataType="viewModels:AnalysisControlWrapperViewModel">

    <TabControl>
        <TabItem Header="Tag">
            <analysis:AnalysisByTagControl DataContext="{Binding AnalysisByTagViewModel}"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch" />
        </TabItem>
        <TabItem Header="Ticket">
            <analysis:AnalysisByTicketControl DataContext="{Binding AnalysisByTicketViewModel}"
                                               HorizontalAlignment="Stretch"
                                               VerticalAlignment="Stretch" />
        </TabItem>
        <TabItem Header="Sprint">
            <analysis:AnalysisBySprintControl DataContext="{Binding AnalysisBySprintViewModel}"
                                               HorizontalAlignment="Stretch"
                                               VerticalAlignment="Stretch" />
        </TabItem>
    </TabControl>
</UserControl>