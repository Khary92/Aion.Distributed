<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:settings="clr-namespace:Client.Desktop.Presentation.Models.Settings"
             x:DataType="settings:SettingsViewModel"
             mc:Ignorable="d"
             d:DesignWidth="600" d:DesignHeight="400"
             x:Class="Client.Desktop.Presentation.Views.Setting.SettingsControl">

    <Grid Margin="16" RowDefinitions="Auto,*,Auto" ColumnDefinitions="*">
        
        <StackPanel Orientation="Horizontal" Spacing="12" Grid.Row="0">
            <TextBlock Text="File export path:" VerticalAlignment="Center"/>
            <TextBox Text="{Binding Model.ExportPath, Mode=TwoWay}" IsReadOnly="True" Width="300"/>
            <Button Content="Select" Click="OnExportPathClick"/>
        </StackPanel>

        <Grid Grid.Row="1"/>

        <StackPanel Grid.Row="2" HorizontalAlignment="Right">
            <Button Content="Save" Command="{Binding SaveConfigCommand}" Width="100"/>
        </StackPanel>

    </Grid>
</UserControl>