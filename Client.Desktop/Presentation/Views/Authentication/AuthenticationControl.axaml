<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:authentication="clr-namespace:Client.Desktop.Presentation.Models.Authentication"
             x:DataType="authentication:AuthenticationViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Client.Desktop.Presentation.Views.Authentication.AuthenticationControl">

    <Grid RowDefinitions="*,Auto,Auto,Auto,*">
        <StackPanel Grid.Row="1" HorizontalAlignment="Center">
            <TextBlock>User: </TextBlock>
            <TextBox Text="{Binding UserName, Mode=TwoWay}" />
        </StackPanel>
        <StackPanel Grid.Row="2" HorizontalAlignment="Center">
            <TextBlock>Password: </TextBlock>
            <TextBox Text="{Binding Password, Mode=TwoWay}" />
        </StackPanel>
        <Button Grid.Row="3" Command="{Binding LoginCommand}" />
    </Grid>
</UserControl>