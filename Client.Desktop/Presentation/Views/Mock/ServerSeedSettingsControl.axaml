<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mockSetup="clr-namespace:Client.Desktop.Presentation.Models.Mock"
             x:DataType="mockSetup:ServerSeedSettingsViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Client.Desktop.Presentation.Views.Mock.ServerSeedSettingsControl">

    <ScrollViewer>
        <Grid RowDefinitions="Auto, Auto" ColumnDefinitions="*,*" Margin="20">
            <StackPanel Grid.Row="0" Grid.Column="0">
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <TextBlock Text="Work Days:" Width="180" />
                    <NumericUpDown Maximum="100" Minimum="0" Value="{Binding Model.WorkDayCount, Mode=TwoWay}"
                                   Width="200" />

                </StackPanel>

                <StackPanel Orientation="Horizontal" Spacing="10">
                    <TextBlock Text="Tracking Slots:" Width="180" />
                    <NumericUpDown Maximum="100" Minimum="0" Value="{Binding Model.TrackingSlotsCount, Mode=TwoWay}"
                                   Width="200" />

                </StackPanel>

                <StackPanel Orientation="Horizontal" Spacing="10">
                    <TextBlock Text="Sprints:" Width="180" />
                    <NumericUpDown Maximum="100" Minimum="0" Value="{Binding Model.SprintCount, Mode=TwoWay}"
                                   Width="200" />

                </StackPanel>

                <StackPanel Orientation="Horizontal" Spacing="10">
                    <TextBlock Text="Tickets:" Width="180" />
                    <NumericUpDown Maximum="100" Minimum="0" Value="{Binding Model.TicketCount, Mode=TwoWay}"
                                   Width="200" />

                </StackPanel>

                <StackPanel Orientation="Horizontal" Spacing="10">
                    <TextBlock Text="Tags:" Width="180" />
                    <NumericUpDown Maximum="100" Minimum="0" Value="{Binding Model.TagCount, Mode=TwoWay}" Width="200" />

                </StackPanel>

                <StackPanel Orientation="Horizontal" Spacing="10">
                    <TextBlock Text="Notes:" Width="180" />
                    <NumericUpDown Maximum="100" Minimum="0" Value="{Binding Model.NoteCount, Mode=TwoWay}" Width="200" />

                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Row="0" Grid.Column="1">
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <TextBlock Text="Note Types:" Width="180" />
                    <NumericUpDown Maximum="100" Minimum="0" Value="{Binding Model.NoteTypeCount, Mode=TwoWay}"
                                   Width="200" />

                </StackPanel>

                <StackPanel Orientation="Horizontal" Spacing="10">
                    <TextBlock Text="Replay Docs:" Width="180" />
                    <NumericUpDown Maximum="100" Minimum="0"
                                   Value="{Binding Model.AmountOfReplayDocumentation, Mode=TwoWay}" Width="200" />

                </StackPanel>

                <StackPanel Orientation="Horizontal" Spacing="10">
                    <TextBlock Text="Min Notes/Slot:" Width="180" />
                    <NumericUpDown Maximum="100" Minimum="0"
                                   Value="{Binding Model.MaximumAmountOfNotesPerTimeSlot, Mode=TwoWay}" Width="200" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Spacing="10">
                    <TextBlock Text="Max Notes/Slot:" Width="180" />
                    <NumericUpDown Maximum="100" Minimum="0"
                                   Value="{Binding Model.MaximumAmountOfNotesPerTimeSlot, Mode=TwoWay}" Width="200" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Spacing="10">
                    <TextBlock Text="Min Checked Tags/Slot:" Width="180" />
                    <NumericUpDown Maximum="100" Minimum="0"
                                   Value="{Binding Model.MinimumAmountOfCheckedTagsPerTimeSlot, Mode=TwoWay}"
                                   Width="200" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Spacing="10">
                    <TextBlock Text="Max Checked Tags/Slot:" Width="180" />
                    <NumericUpDown Maximum="100" Minimum="0"
                                   Value="{Binding Model.MaximumAmountOfCheckedTagsPerTimeSlot, Mode=TwoWay}"
                                   Width="200" />
                </StackPanel>
            </StackPanel>
            <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Horizontal" Spacing="20" Margin="0,20,0,0">
                <Button Content="Save" Command="{Binding SaveSetupCommand}" Width="120" />
                <Button Content="Reseed" Command="{Binding ReseedCommand}" Width="120" />
                <Button Content="Clear" Command="{Binding ClearCommand}" Width="120" />
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>