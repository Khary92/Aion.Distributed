<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:logData="clr-namespace:Client.Desktop.Presentation.Models.Mock"
             x:DataType="logData:ServerLogViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Client.Desktop.Presentation.Views.Mock.ServerLogControl">

    <Grid ColumnDefinitions="*" RowDefinitions="*">
        <DataGrid ItemsSource="{Binding Model.Traces}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Timestamp" Binding="{Binding TimeStamp, StringFormat=HH:mm:ss}" />
                <DataGridTextColumn Header="Type" Binding="{Binding SortingType}" />
                <DataGridTextColumn Header="UseCase" Binding="{Binding UseCaseMeta}" />
                <DataGridTextColumn Header="Action" Binding="{Binding LoggingMeta}" />
                <DataGridTextColumn Header="Log" Binding="{Binding Log}" />
                <DataGridTextColumn Header="Origin" Binding="{Binding OriginClassType}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>