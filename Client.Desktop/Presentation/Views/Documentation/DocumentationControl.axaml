<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:documentation1="clr-namespace:Client.Desktop.Presentation.Models.Documentation"
             xmlns:documentation="clr-namespace:Client.Desktop.Presentation.Views.Documentation"
             xmlns:dynamicControls="clr-namespace:Client.Desktop.Presentation.Models.TimeTracking.DynamicControls"
             xmlns:dynamicControl="clr-namespace:Client.Desktop.Presentation.Views.Tracking.DynamicControl"
             x:DataType="documentation1:DocumentationViewModel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Client.Desktop.Presentation.Views.Documentation.DocumentationControl">

    <UserControl.DataTemplates>
        <DataTemplate DataType="documentation1:TypeCheckBoxViewModel">
            <documentation:TypeCheckBoxControl />
        </DataTemplate>
    </UserControl.DataTemplates>

    <Grid ColumnDefinitions="Auto,Auto,*" RowDefinitions="*">

        <Border Grid.Column="0" Margin="10"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid ColumnDefinitions="Auto,Auto">
                <Grid Grid.Column="0" RowDefinitions="Auto,*"
                      Margin="10,0,0,0">
                    <TextBlock Grid.Row="0" Text="Choose a ticket"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10" />

                    <ListBox Grid.Row="1" Name="ListBoxItems"
                             ItemsSource="{Binding Model.AllTickets}"
                             SelectedItem="{Binding Model.SelectedTicket, Mode=TwoWay}"
                             SelectionMode="Single"
                             Width="200"
                             VerticalAlignment="Stretch">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>

                <Grid Grid.Column="1" Margin="10,0,0,0"
                      RowDefinitions="Auto,*"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
                    <TextBlock Grid.Row="0" Text="Choose types"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10" />

                    <ItemsControl Grid.Row="1" ItemsSource="{Binding Model.AllNoteTypes}"
                                  VerticalAlignment="Stretch">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="documentation1:TypeCheckBoxViewModel">
                                <documentation:TypeCheckBoxControl />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Grid>
        </Border>
        <Border Grid.Column="2" Margin="10"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <ItemsControl ItemsSource="{Binding Model.SelectedNotes}"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="dynamicControls:NoteViewModel">
                        <dynamicControl:NoteControl />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>
    </Grid>
</UserControl>